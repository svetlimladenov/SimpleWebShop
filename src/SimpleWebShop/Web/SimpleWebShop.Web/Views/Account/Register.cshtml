@model SimpleWebShop.Web.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <div class="row mt-3">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="md-form">
                        <i class="fas fa-user prefix"></i>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "inputIconEx2" })
                        @Html.LabelFor(m => m.UserName, new { @for = "inputIconEx2" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="md-form">
                        <i class="fas fa-user prefix"></i>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "inputIconEx2" })
                        @Html.LabelFor(m => m.Email, new { @for = "inputIconEx2" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="md-form">
                        <i class="fas fa-lock prefix"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control validate", id = "inputValidationEx2" })
                        @Html.LabelFor(m => m.Password, new { @for = "inputValidationEx2", data_error = "wrong", data_success = "right" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="md-form">
                        <i class="fas fa-lock prefix"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control validate", id = "inputValidationEx2" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @for = "inputValidationEx2", data_error = "wrong", data_success = "right" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="row form-group">
                        <div class="offset-md-4 col-md-4 text-center">
                            <input type="submit" value="Register" class="btn red darken-2 text-white"/>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
