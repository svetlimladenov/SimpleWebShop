@model ICollection<SimpleWebShop.Services.Models.ViewModels.Home.CategoriesWithNameAndIcon>
    <nav class="navbar navbar-expand-sm navbar-dark unique-color-dark main-menu">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav" style="flex-direction: column" id="sidebarCategories">
                @foreach (var category in Model)
                {
                    <li class="nav-item"><a class="nav-link" href="/@category.NameForLink"><i class="fas fa-@category.IconClass"></i> @category.Name </a></li>
                } 
            </ul>
        </div>
        <div class="drop-down">
            <h3 class="drop-down-title text-center">Category name</h3>
        </div>
    </nav>
