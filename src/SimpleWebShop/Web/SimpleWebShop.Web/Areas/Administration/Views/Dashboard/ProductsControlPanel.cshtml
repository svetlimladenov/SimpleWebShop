@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Products and Categories Control Panel</h2>
<hr />
<div class="row justify-content-around">
    <div class="col-md-3 text-center">
        <h3>Products Actions</h3>
        <div>
            @Html.ActionLink("Add New Product", "Create", "ProductsAdministration", null, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="col-md-3 text-center">
        <h3>Categories Actions</h3>
        <div>
            @Html.ActionLink("Add New Category", "Create", "CategoriesAdministration", null, new { @class = "btn btn-success" })
        </div>
        <div>
            @Html.ActionLink("All Categories", "All", "CategoriesAdministration", null, new { @class = "btn btn-info" })
        </div>
    </div>
</div>
